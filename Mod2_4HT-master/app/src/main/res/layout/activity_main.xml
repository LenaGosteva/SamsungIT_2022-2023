<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/img"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:text="Решатель уравнений типа \nах^2 + bx + c = 0"
        android:textColor="@color/purple_700"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Введите коэффициент при х^2"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/a"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:hint="Введи a:"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="20sp"
        android:autofillHints="" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Введите коэффициент при х"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/b"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:hint="Введи b:"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="20sp"></EditText>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Введите свободный член уравнения"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/c"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:hint="Введи c:"
        android:inputType="numberDecimal|numberSigned"
        android:textSize="20sp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:text="Нажми на меня"
        android:onClick="click" />

    <TextView
        android:id="@+id/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:text="ОТВЕТ"
        android:textColor="@color/black"
        android:textSize="20sp" />

</LinearLayout>